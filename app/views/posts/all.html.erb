<div class = "container">
<h1> Other Budget Plans </h1>


<table class = "table">
  <thead>
    <tr>
      <th>No.</th>
      <th>Date</th>
      <th>Title</th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>      
        <td><%= post.date %></td>
        <td><%= link_to post.title, post %></td>
        <td><%= post.user.username  %></td>   
      </tr>
    <% end %>

  </tbody>
</table>
<br>

<%= link_to 'New Post', new_post_path %><br>

</div>